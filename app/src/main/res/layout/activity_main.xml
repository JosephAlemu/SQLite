<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAddCelebrity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="ADD CELEBRITY"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:paddingLeft="10dp"
            android:text="First Name" />

        <EditText
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/txtEditName"
            android:text="" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:paddingLeft="10dp"
            android:text="Last Name" />

        <EditText
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/txtEditLast"
            android:text="" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:paddingLeft="10dp"
            android:text="Title" />

        <EditText
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/txtEditTitle"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:paddingLeft="10dp"
            android:text="Description" />

        <EditText
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:id="@+id/txtEditDescription"
            android:text="" />


    </LinearLayout>

    <Button
        android:id="@+id/btnCelebrityAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onHandlingDatabase"

        android:text="Add" />

    <Button
        android:id="@+id/btnGetCelebrityList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onHandlingDatabase"
        android:text="Get person list"/>



</LinearLayout>
